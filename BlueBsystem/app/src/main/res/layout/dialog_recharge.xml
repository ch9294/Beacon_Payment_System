<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:textColor="#FFFFFF"
            android:background="#000E2B"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textStyle="bold"
            android:text="요금 충전"/>
    <EditText
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/dialogEditMoney" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:hint="금액을 입력하세요" android:textStyle="bold"/>
    <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dialogTextAlert" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialogEditMoney" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="안내 문구" android:textStyle="bold|italic"/>
    <Button
            android:background="@drawable/btn_window"
            android:text="충전"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/dialogBtnRecharge"
            app:layout_constraintTop_toBottomOf="@+id/dialogTextAlert" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>