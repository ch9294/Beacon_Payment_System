<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/constraintLayout">
    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@mipmap/normal_bus_image"
            android:id="@+id/imageView2" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
    <android.support.constraint.ConstraintLayout
            android:background="@drawable/p_layout_window"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView2" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp" android:id="@+id/busInfolayout">

        <TextView
                style="@style/PlatformInformationTextView"
                android:id="@+id/number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/viewLine"
                app:layout_constraintBottom_toTopOf="@+id/centerLine"/>
        <TextView
                style="@style/PlatformInformationTextView"
                android:id="@+id/type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                app:layout_constraintBottom_toTopOf="@+id/centerLine"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="1dp" android:id="@+id/centerLine"
                android:background="#afafaf"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <TextView
                style="@style/HorizontalSeparateLine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/centerLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/viewLine"/>
        <TextView
                style="@style/PlatformInformationTextView"
                android:id="@+id/time"
                app:layout_constraintTop_toTopOf="@+id/centerLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/viewLine2"/>
        <TextView
                style="@style/PlatformInformationTextView"
                android:id="@+id/count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewLine2"
                app:layout_constraintTop_toBottomOf="@+id/centerLine"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                style="@style/HorizontalSeparateLine"
                android:id="@+id/viewLine2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/centerLine"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_begin="184dp"/>
</android.support.constraint.ConstraintLayout>